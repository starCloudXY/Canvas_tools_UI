<cu-custom bgColor="bg-silentBlue" isCustom="{{true}}"><view slot="content">添加待办</view></cu-custom>
<wxs module="util" src="../util.wxs" />
<view class="container">
  <view class="form-group">
    <view class="form-cell">
      <view class="form-cell_title">待办事项</view>
      <input class="form-cell_input" placeholder="请输入待办事项（10字以内）" placeholder-class="form-cell_title-placeholder" bindinput="onTitleInput" value="{{title}}" />
    </view>
    <view class="form-cell">
      <view class="form-cell_title">详细描述</view>
      <input class="form-cell_input" placeholder="请输入详细描述（100字以内）" placeholder-class="form-cell_title-placeholder" bindinput="onDescInput" value="{{desc}}" />
    </view>
  </view>
  <view class="form-group">
    <view class="form-cell inline">
      <view>截止日期</view>
      <picker class="option" mode="date" value="{{date}}" start="2021-09-01" end="2030-09-01" bindchange="onChooseDateFreq">
        {{date}}
      </picker>
      <picker class="selector" mode="date" value="{{date}}" start="2021-09-01" end="2030-09-01" bindchange="onChooseDateFreq">
        <image class="selector" src="../../images/add/next.png" />
      </picker>
    </view>
  </view>
  <view class="form-group">
    <view class="form-cell inline">
      <view>添加附件</view>
      <view class="upload-text" bindtap="addFile">
        {{(files.length === 0 ? "点击添加附件" : util.filterStr(fileName, 15))}}
      </view>
      <image class="upload" bindtap="addFile" src="../../images/add/next.png"></image>
    </view>
  </view>
  <view class="form-group">
    <view class="form-cell inline">
      <view>事件状态</view>
      <picker class="option" bindchange="onChooseFreq" range="{{freqOptions}}">
        {{freqOptions[freq]}}
      </picker>
      <picker class="selector" bindchange="onChooseFreq" range="{{freqOptions}}">
        <image class="selector" src="../../images/add/next.png" />
      </picker>
    </view>
  </view>
  <view class="flex solid-bottom padding justify-around">
  <button class="cu-btn bg-silentBlue"bindtap="resetTodo">重置</button>
  <button class="cu-btn line-blue " bindtap="saveTodo">保存</button>
</view>

</view>
